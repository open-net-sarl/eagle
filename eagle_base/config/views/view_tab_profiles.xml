<openerp>
    <data>

        <!--
            Tabs profiles
        -->
        <record model="ir.ui.view" id="eagle_view_tabs_profile_tree">
            <field name="name">Eagle Tabs Profiles List</field>
            <field name="model">eagle.config.tabs_profile</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Tabs Profiles" editable="bottom">
                    <field name="name"/>
                    <button name="%(eagle_action_wiz_tabs_profile)d" string="Configure" type="action" icon="gtk-apply"/>
                    <field name="opts"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="eagle_view_tabs_profile_form">
            <field name="name">Eagle Tabs Profiles View</field>
            <field name="model">eagle.config.tabs_profile</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Tabs Profiles">
                    <group name="top_left" colspan="2" col="2">
                        <field name="name" colspan="2"/>
                    </group>
                    <group name="top_right" colspan="2" col="2">
                        <button name="%(eagle_action_wiz_tabs_profile)d" string="Configure" type="action"/>
                    </group>
                    <separator string="Options" colspan="4"/>
                    <field name="opts" nolabel="1" colspan="4"/>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="eagle_action_tabs_profile">
            <field name="name">The tabs profiles</field>
            <field name="res_model">eagle.config.tabs_profile</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="eagle_view_tabs_profile_tree"/>
        </record>

        <menuitem 
            name="The tabs profiles"
            id="eagle_menu_tabs_profiles"  
            parent="eagle_menu_eagle_config"
            sequence="51" 
            action="eagle_action_tabs_profile"
            groups="eagle_base.group_contracts_viewers,eagle_base.group_contracts_editors,eagle_base.group_contracts_managers"/>

    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="eagle_report_form_inherit">
            <field name="name">Eagle Reporting: sale form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="31"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='quot_lines']/tree//field[@name='requested_date']" position="after">
                    <field name="page_break"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="eagle_view_ssubcr_form_inherit2">
            <field name="name">Eagle Reporting: sale subscription form</field>
            <field name="model">sale.subscription</field>
            <field name="inherit_id" ref="eagle_project.eagle_view_ssubcr_form_inherit"/>
            <field name="priority" eval="18"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='recurring_invoice_line_ids']/tree//field[@name='sale_layout_cat_id']" position="after">
                    <field name="page_break"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="eagle_view_active_subcr_lines_form2">
            <field name="name">Eagle Reporting: active sale subscription lines form</field>
            <field name="model">sale.subscription.line</field>
            <field name="inherit_id" ref="eagle_project.eagle_view_active_subcr_lines_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_layout_cat_id']" position="after">
                    <field name="page_break"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

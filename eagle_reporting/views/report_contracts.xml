<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="eagle_reporting.report_contract_document">
            <t t-call="report.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.customer_id.lang})"/>
                <div class="page">
                    <div class="row col-xs-12">
                        
                    <!-- [Adress] -->
                        <!-- <div class="col-xs-4 pull-right postal_adress_div">
                            <address t-field="o.customer_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                        </div> -->
                        <div class="col-xs-4 pull-right postal_adress_div">
                            <span t-if="o.customer_id.name">
                                <strong>
                                    <span t-field="o.customer_id.name"/>
                                </strong>
                                <br/>
                            </span>
                            <!-- CONTACT NAME FOR COMPANY -->
                            <span t-if="o.customer_id.is_company and o.customer_id.child_ids">
                                <span t-field="o.customer_id.child_ids[0].name"/>
                                <br/>
                            </span>
                            <!-- COMPANY NAME FOR CONTACT -->
                            <span t-if="o.customer_id.parent_id">
                                <span t-field="o.customer_id.parent_id.name"/>
                                <br/>
                            </span>
                            <span t-if="o.customer_id.street">
                                <span t-field="o.customer_id.street"/>
                                <br/>
                            </span>
                            <span t-if="o.customer_id.street2">
                                <span t-field="o.customer_id.street2"/>
                                <br/>
                            </span>
                            <span t-if="o.customer_id.zip">
                                <span t-field="o.customer_id.zip"/>
                            </span>
                            <span t-if="o.customer_id.city">
                                <span t-field="o.customer_id.city"/>
                                <br/>
                            </span>
                            <span t-if="o.customer_id.country_id.code != 'CH'">
                                <span t-field="o.customer_id.country_id.name"/>
                                <br/>
                            </span>
                        </div>

                    </div>
                       
                <!-- [Active recurrings] -->
                    <t t-set="has_rec_lines" t-value="0" />
                    <t t-if="len(o.lines_recurring)">
                        <t t-set="has_rec_lines" t-value="1"/>
                    </t>

                    <!-- if has something behing -->
                    <t t-if="has_not_rec_lines == 1 and has_rec_lines == 1 and o.do_page_break">
                        <p style="page-break-after:always;"></p>
                    </t>

                    <t t-if="has_rec_lines == 1">
<!--                         <p><strong>[TO REMOVE] Recurring / Active [TO REMOVE]</strong></p> -->
                        
                        <!-- table -->
                        <t t-set="filtered_lines" t-value="o.lines_recurring"/>
                        <t t-call="eagle_reporting.table_template"/>
                        
                    </t>

                    <!-- <t t-call="eagle_reporting.table_deliverables" />
                    <t t-call="eagle_reporting.table_services" /> -->
                    
                    <t t-set="eagle_table_common_ids" t-value="o.lst_deliverables"/>
                    <t t-call="eagle_reporting.table_common" />

                    <t t-set="eagle_table_common_ids" t-value="o.lst_services"/>                    
                    <t t-call="eagle_reporting.table_common" />

                <!-- [Final total] -->
                    <div class="row">
                        <div class="col-xs-5 pull-right">
                            <table class="table table-condensed">
                                <t t-set="total_amount" t-value="o.non_recurring_total + o.recurring_total"/>
                            <!--
                                #Tax??
                                <tr>
                                    <td>TVA (8%)</td>
                                    <td class="text-right">
                                        <span t-esc="round(total_amount*0.08, 2)"/> <span t-esc="o.customer_id.property_product_pricelist.currency_id.symbol"/>
                                    </td>
                                </tr>
                            -->
                                <tr class="border-black">
                                    <td><strong>Total (WT)</strong></td>
                                    <td class="text-right">
                                        <strong>
                                            <span t-esc="round(total_amount, 2)" t-options="{'widget': 'monetary', 'display_currency': o.customer_id.property_product_pricelist.currency_id}"/>
                                        </strong>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <!-- New table -->


                    <!-- NOTES -->
                    <t t-if="o.notes">
                        <div style="page-break-inside: avoid; color: #303030; vertical-align:top; padding-top: 10px; font-size:9pt;">
                                <span t-field="o.notes"/>
                        </div>
                    </t>


                </div>
            </t>
        </template>

        <template id="eagle_reporting.table_template">
            <!-- filtered_lines needs to be defined before the call -->
            <t t-foreach="o.subs_lines_layouted(filtered_lines)" t-as="page">
                <table class="table table-condensed eagle_reporting_table">
                    <thead>
                        <tr>
                            <th id="col_descrp">Description</th>
                            <th id="col_qty">Qty.</th>
                            <th id="col_price_unit">Unit Price</th>
                            <!-- <th id="col_tax">Taxes</th> -->
                            <th id="col_price">Price (WT)</th>

                            <!-- 
                                defines the number of columns to changs all the colspans 
                            -->
                            <t t-set="number_columns" t-value="4"/>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="page" t-as="layout_category">
                            <t t-if="layout_category_size &gt; 0 or page_size &gt; 1" groups="sale.group_sale_layout">
                                <tr class="active layout_category_title">
                                    <!-- dont remove style! -->
                                    <td t-attf-colspan="{{number_columns}}" style="border-top: 1px solid LightSteelBlue">
                                        <t t-esc="layout_category['name']"/>
                                    </td>
                                </tr>
                            </t>

                            <!-- Lines associated -->
                            <t t-foreach="layout_category['lines']" t-as="sub_line">
                                <tr class="eagle_table_lines">
                                    <td>
                                        <div>
                                            <span t-field="sub_line.name"/>
                                        </div>
                                        <div>
                                            <span t-field="sub_line.eagle_note"/>
                                        </div>
                                    </td>    
                                    <td>
                                        <span t-esc="&quot;%0.0f&quot; % sub_line.quantity"/>
                                        <span t-field="sub_line.uom_id"/>
                                        <!-- <span t-field="sub_line.quantity"/> -->
                                    </td>
                                    <td>
                                        <div>
                                            <span t-field="sub_line.price_unit"/>
                                        </div>
                                        <div>
                                            <span t-if="sub_line.discount">
                                                <t t-set="line_discount" t-value="sub_line.discount" />
                                                <t t-if="int(sub_line.discount) == line_discount">
                                                    <t t-set="line_discount" t-value="int(sub_line.discount)" />
                                                </t>
                                                (Disc. <span t-esc="line_discount"/>%)
                                            </span>
                                        </div>
                                    </td>
                                    <!-- <td>
                                        <t t-foreach="sub_line.product_id.taxes_id" t-as="x">
                                            <div>
                                                <span t-esc="x.description or x.name"/>
                                            </div>
                                        </t>
                                    </td> -->
                                    <td>
                                        <span t-field="sub_line.price_subtotal"/>
                                    </td>
                                </tr>
                            </t>
                            <t t-set="last_has_not_subtotal" t-value="True"/>
                                <tr class="text-right eagle_table_subtotal_cat">
                                    <td t-attf-colspan="{{number_columns}}">
                                        <strong>Subtotal (WT) : </strong>
                                        <t t-set="subtotal" t-value="sum([line.price_subtotal for line in layout_category['lines']])"/>
                                        <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': o.customer_id.property_product_pricelist.currency_id}"/>
                                        <t t-set="last_has_not_subtotal" t-value="False"/>
                                    </td>
                                </tr>
                        </t>
                    </tbody>
                </table>
                <t t-if="page_index &lt; page_size - 1">
                    <p style="page-break-before:always;"> </p>
                </t>
            </t>

        </template>

        <template id="eagle_reporting.table_common">


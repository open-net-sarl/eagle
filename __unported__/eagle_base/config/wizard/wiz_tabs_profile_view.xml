<openerp>
    <data>

        <record model="ir.ui.view" id="eagle_view_wiz_tabs_profile">
            <field name="name">Eagle wizard: tabs profile management</field>
            <field name="model">eagle.wiz_tabs_profile</field>
            <field name="arch" type="xml">
                <form string="Configure the tabs profile" version="7.0">
                    <header>
                        <button string="Apply" type="object" name="do_save" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </header>
                    <sheet string="Configure the tabs profile">
                        <label string=" " colspan="4"/>
                        <notebook>
                            <page name="placeholder"/>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="eagle_action_wiz_tabs_profile">
            <field name="name">Configure the tabs profile</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">eagle.wiz_tabs_profile</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>

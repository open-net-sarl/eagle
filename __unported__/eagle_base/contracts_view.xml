                    </group>
                    <notebook colspan="4">
                        <page string="Informations">
                            <group col="10">
                                <group name="info_left" colspan="6" col="12">
                                    <label for="qty"/>
                                    <div>
                                        <field 
                                            name="qty" 
                                            nolabel="1"
                                            attrs="{'readonly':[('state','=','done')]}" 
                                            on_change="recomp_line(name,parent.customer_id,qty,list_price,discount)"/>

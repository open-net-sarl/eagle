        <record model="ir.ui.view" id="eagle_view_contract_form">
            <field name="name">Eagle Contract View</field>
            <field name="model">eagle.contract</field>
            <field name="arch" type="xml">
                <form string="Contract" version="7.0">
                    <header>
                        <button name="contract_draft" string="Offer" states="confirm" type="object" groups="eagle_base.group_contracts_managers"/>
                        <button name="contract_confirm" string="Confirmation" states="draft" type="object" groups="eagle_base.group_contracts_managers"/>
                        <button name="contract_installation" string="Installation" states="confirm" type="object" class="oe_highlight" groups="eagle_base.group_contracts_managers"/>
                        <button name="contract_production" string="Production" states="installation" type="object" class="oe_highlight" groups="eagle_base.group_contracts_managers"/>
                        <button name="contract_close" string="Close" states="production" type="object" groups="eagle_base.group_contracts_managers"/>
                        <button name="contract_cancel" string="Cancel" states="draft,installation,production" type="object" groups="eagle_base.group_contracts_managers"/>
                        <button name="%(eagle_action_wiz_tabs_profile_select)d" string="Tabs profile" type="action"/>
                        <field name="state" widget="statusbar" statusbar_colors='{"installation":"green","production":"green","closed":"red","canceled":"red"}'/>
                    </header>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name" string="Contract name"/>
                        </div>
                        <h2 style="padding-right:10px;">
                            <field name="name" attrs="{'readonly':[('state','&lt;&gt;','draft')]}"/>
                        </h2>
                        <div class="oe_edit_only">
                            <label for="customer_id" string="Customer (mandatory only in 'installation' and 'production' states)"/>
                        </div>
                        <h2>
                            <field name="customer_id" attrs="{'readonly':[('state','not in',['draft','confirm'])], 'required':[('state', 'in', ['installation', 'production'])]}" on_change="onchange_customer(customer_id)"/>
                        </h2>
                    </div>
                    <div name="base_buttons">
                    </div>
                    <group colspan="4" col="4" name="top">
                        <field name="eagle_parm_use_price" invisible="1"/>
                        <field name="eagle_parm_use_members_list" invisible="1"/>
                        <field name="eagle_parm_use_partners_list" invisible="1"/>
                        <field name="eagle_parm_use_partners_roles" invisible="1"/>
                        <field name="eagle_parm_show_all_meta_tabs" invisible="1"/>
                        <field name="eagle_parm_inline_pos_edit" invisible="1"/>
                        
                        <field name="tab_profile_positions" invisible="1"/>
                        <field name="tab_profile_other_infos" invisible="1"/>
                        <field name="tab_profile_members" invisible="1"/>
                        <field name="tab_profile_partners" invisible="1"/>
                        <field name="tab_profile_part_roles" invisible="1"/>
                        <field name="tab_profile_notes" invisible="1"/>
                        <field name="tab_profile_debug" invisible="1"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Content" attrs="{'invisible':[('tab_profile_positions','=',False),('eagle_parm_show_all_meta_tabs','=',False)]}">
                            <field name="positions" nolabel="1" colspan="4" context="{'ons_switchable_edition':True}"/>
                            <group>
                                <div name="pos_buttons">
                                    <button name="%(eagle_action_wiz_rebuild_pos_seq)d" string="Sequences" class="oe_right" states="draft,installation,production" type="action"/>
                                    <button name="%(eagle_action_wiz_copy_positions_to)d" string="Copy to" class="oe_right" type="action"/>
                                    <button 
                                        name="action_view_positions" 

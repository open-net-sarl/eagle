                                        attrs="{'invisible':[('state','!=','recurrent')]}"
                                        on_change="onchange_description(description, recurrence_id, next_invoice_date, start_of_period)"/>
                                    <field 
                                        name="cancellation_deadline"
                                        attrs="{'invisible':[('state','!=','recurrent')]}"/>
                                    <field 
                                        name="start_of_period"
                                        attrs="{'invisible':[('state','!=','recurrent')]}"
                                        on_change="onchange_description(description, recurrence_id, next_invoice_date, start_of_period)"/>
                                    <field 
                                        name="is_active" 
                                        string="Active"
                                        attrs="{'invisible':[('state','!=','recurrent')]}"/>
                                    <field 
                                        name="progr_rate"
                                        attrs="{'invisible':[('state','!=','progressive')]}"
                                        on_change="onchange_progr_rate()"/>
                                    <field 
                                        name="progr_invoiced"
                                        attrs="{'invisible':[('state','!=','progressive')]}"/>
                                </group>
                            </group>
                            <group name="info_out" colspan="4" col="4">
                                <separator string="Reported text" colspan="4"/>
                                <field name="out_description" attrs="{'readonly':[('state','=','done')]}" colspan="4" nolabel="1"/>
                            </group>
                            <group name="info_bottom" colspan="4" col="4"  attrs="{'invisible':[('eagle_parm_use_price','=',False)]}">
                                <separator string="Prices / Amounts" colspan="4"/>
                                <group name="info_bottom_amounts" colspan="2" col="2">
                                    <field name="discount" attrs="{'readonly':[('state','=','done')],'invisible':[('eagle_parm_use_price','=',False)]}" on_change="recomp_line(name,parent.customer_id,qty,list_price,discount)"/>
                                    <field name="list_price" attrs="{'readonly':[('state','=','done')],'invisible':[('eagle_parm_use_price','=',False)]}" on_change="recomp_line(name,parent.customer_id,qty,list_price,discount)"/>
                                    <field name="is_billable" attrs="{'readonly':[('state','=','done')],'invisible':[('eagle_parm_use_price','=',False)]}"/>
                                    <field name="cl_total" attrs="{'invisible':[('eagle_parm_use_price','=',False)]}"/>
                                </group>
                                <group name="info_bottom_taxes" colspan="2" col="2">
                                    <newline/>
                                </group>
                            </group>
                        </page>
                        <page string="Properties">
                            <field name='property_ids' colspan="4" nolabel="1"/>
                        </page>
                        <page string="Notes">
                            <field name='notes' colspan="4" nolabel="1"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>


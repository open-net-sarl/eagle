<openerp>
    <data>

        <!--
                Specific contract positions menu item
        -->

        <record model="ir.ui.view" id="eagle_view_contract_pos_indep_tree">
            <field name="name">Eagle Contract Position Independant List</field>
            <field name="model">eagle.contract.position</field>
            <field name="priority" eval="60"/>
            <field name="arch" type="xml">
                <tree string="Positions">
                    <field name="contract_id"/>
                    <field name="sequence"/>
                    <field name="out_description" string="Concerning"/>
                    <field name="qty"/>
                    <field name="progr_rate"/>
                    <field name="recurrence_id"/>
                    <field name="cancellation_deadline"/>
                    <field name="next_invoice_date"/>
                    <button name="button_enable" string="Set to 'Active'" icon="gtk-yes" type="object" attrs="{'invisible':[('state','&lt;&gt;','recurrent')],'readonly':[('is_active','=',True)]}"/>
                    <button name="button_disable" string="Set to 'Inactive'" icon="gtk-cancel" type="object" attrs="{'invisible':[('state','&lt;&gt;','recurrent')],'readonly':[('is_active','=',False)]}"/>
                    <field name="is_active"/>
                    <field name="is_billable"/>
                    <field name="cl_total" sum="Total" invisible="0"/>
                    <field name='state'/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="eagle_view_contract_pos_indep_form">
            <field name="name">Eagle Contract Position View</field>
            <field name="model">eagle.contract.position</field>
            <field name="priority" eval="60"/>
            <field name="arch" type="xml">
                <form string="Position" version="7.0">
                    <group colspan="4">
                        <group colspan="2">
                            <field name="contract_id" colspan="2"/>
                        </group>
                        <group colspan="2">
                            <newline/>
                        </group>
                    </group>
                    <group colspan="4">
                        <separator string="Description" colspan="4"/>
                        <group colspan="2">
                            <field name="name" attrs="{'readonly':[('state','=','done')]}" on_change="onchange_product(name, qty, parent.date_start, parent.customer_id, parent.pricelist_id)" colspan="2"/>
                        </group>
                        <group colspan="2">
                            <field name="eagle_parm_use_price" invisible="1" colspan="2"/>
                       </group>
                        <field name="description" attrs="{'readonly':[('state','=','done')]}" on_change="onchange_description(description, recurrence_id, next_invoice_date)" colspan="4" nolabel="1"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Informations">
                            <group name="info_left" colspan="2" col="2">
                                <field name="qty" attrs="{'readonly':[('state','=','done')]}" colspan="2" on_change="recomp_line(name,parent.customer_id,qty,list_price,discount)"/>
                                <field name="sequence" attrs="{'readonly':[('state','=','done')]}"/>
                                <field name='state'/>
                            </group>
                            <group name="info_right" colspan="2" col="2">
                                <field 
                                    name="next_invoice_date"
                                    attrs="{'readonly':[('state','=','done')]}" 
                                    on_change="onchange_description(description, recurrence_id, next_invoice_date, start_of_period)"/>
                                <field 
                                    name="recurrence_id"
                                    attrs="{'invisible':[('state','!=','recurrent')]}"
                                    on_change="onchange_description(description, recurrence_id, next_invoice_date, start_of_period)"/>
                                <field 
                                    name="cancellation_deadline"
                                    attrs="{'invisible':[('state','!=','recurrent')]}"/>
                                <field 
                                    name="start_of_period"
                                    attrs="{'invisible':[('state','!=','recurrent')]}"
                                    on_change="onchange_description(description, recurrence_id, next_invoice_date, start_of_period)"/>
                                <field 
                                    name="is_active" 
                                    string="Active"
                                    attrs="{'invisible':[('state','!=','recurrent')]}"/>
                                <field 
                                    name="progr_rate"
                                    attrs="{'invisible':[('state','!=','progressive')]}"
                                    on_change="onchange_progr_rate()"/>
                                <field 
                                    name="progr_invoiced"
                                    attrs="{'invisible':[('state','!=','progressive')]}"/>
                            </group>
                            <group name="info_out" colspan="4" col="4">
                                <separator string="Reported text" colspan="4"/>
                                <field name="out_description" attrs="{'readonly':[('state','=','done')]}" colspan="4" nolabel="1"/>
                            </group>
                            <group name="info_bottom" colspan="4" col="4"  attrs="{'invisible':[('eagle_parm_use_price','=',False)]}">
                                <separator string="Prices / Amounts" colspan="4"/>
                                <group name="info_bottom_amounts" colspan="2" col="2">
                                    <field name="discount" attrs="{'readonly':[('state','=','done')],'invisible':[('eagle_parm_use_price','=',False)]}" on_change="recomp_line(name,parent.customer_id,qty,list_price,discount)"/>
                                    <field name="list_price" attrs="{'readonly':[('state','=','done')],'invisible':[('eagle_parm_use_price','=',False)]}" on_change="recomp_line(name,parent.customer_id,qty,list_price,discount)"/>
                                    <field name="is_billable" attrs="{'readonly':[('state','=','done')],'invisible':[('eagle_parm_use_price','=',False)]}"/>
                                    <field name="cl_total" attrs="{'invisible':[('eagle_parm_use_price','=',False)]}"/>
                                </group>
                                <group name="info_bottom_taxes" colspan="2" col="2">
                                    <newline/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name='notes' colspan="4" nolabel="1"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="eagle_view_contract_pos_indep_filter">
            <field name="name">Eagle Contracts Position Independant Filter</field>
            <field name="model">eagle.contract.position</field>
            <field name="arch" type="xml">
                <search string="Search Contract Positions">
                    <group>
                        <field name="out_description" select="1"/>
                    </group>
                    <group expand="1" string="Group by...">

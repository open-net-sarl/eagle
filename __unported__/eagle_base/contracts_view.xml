                                    <field name="uom_id" colspan="10" nolabel="1" attrs="{'readonly':[('state','=','done')]}"/>
                                    <field name="product_type" colspan="12" attrs="{'readonly':[('state','=','done')]}"/>
                                    <field name="sequence" colspan="12" attrs="{'readonly':[('state','=','done')]}"/>

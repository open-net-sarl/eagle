<openerp>
	<data>

        <!--  Compute Schedulers -->

		<record model="ir.ui.view" id="eagle_wiz_setup_inv_sched_form">
            <field name="name">Eagle Invoice Scheduler</field>
            <field name="model">eagle.setup_inv_sched</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Setup Eagle Invoice Scheduler" version="7.0">
                    <sheet string="Setup Eagle Invoice Scheduler">
                        <field name="scheduler_present" invisible="1" colspan="4"/>
                        <group colspan="4" attrs="{'invisible':[('scheduler_present','!=',False)]}">
    	                   <label string="This wizard is going to add a scheduler for Eagle Invoice. One and only one will be created." colspan="4"/>
                        </group>
                        <group colspan="4" attrs="{'invisible':[('scheduler_present','=',False)]}">
    	                   <label string="A scheduler for Eagle Invoice already exists." colspan="4"/>
                        </group>
    				    <separator colspan="4"/>
    				    <group col="2" colspan="4">
                    		<button icon='gtk-cancel' special="cancel" string="Cancel" />
                    		<button name="setup_scheduler" string="Go!" colspan="1" type="object" icon="gtk-ok" attrs="{'invisible':[('scheduler_present','!=',False)]}"/>
                    	</group>
                    </sheet>
                </form>
            </field>
        </record>

		<record model="ir.actions.act_window" id="eagle_action_wiz_setup_inv_sched">
			<field name="name">Setup Eagle Invoice Scheduler</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">eagle.setup_inv_sched</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="eagle_wiz_setup_inv_sched_form"/>
			<field name="target">new</field>
		</record>
	
		<menuitem 
			action="eagle_action_wiz_setup_inv_sched"
            name="Eagle Invoice" 
			id="eagle_menu_wiz_setup_inv_sched" 
			parent="eagle_base.eagle_menu_eagle_schedulers" 
			sequence="60"
			groups="eagle_base.group_contracts_managers,eagle_base.group_contracts_editors"/>

	</data>
</openerp>

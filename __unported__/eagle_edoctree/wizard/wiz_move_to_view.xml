<openerp>
    <data>
    
        <!--
            Wizard: move the current node to...
        -->
		<record model="ir.ui.view" id="eagle_wiz_move_node_to_view">
			<field name="name">eagle_wiz_copy_node_to_view</field>
			<field name="model">eagle_edoctree.wiz_move_to</field>
			<field name="arch" type="xml">
                <form string="Copy node to" version="7.0">
                    <header>
    					<button 
                            name="do_it" 
                            string="_Mopy" 
                            type="object" 
                            icon="gtk-ok"
                            attrs="{'invisible':[('source','=',False)]}"/>
                        <button 
                            name="contract_create"
                            string="Create"
                            type="object"
                            icon="gtk-add"
                            attrs="{'invisible':[('source','!=',False)]}"/>
                        <button 
                            special="cancel" 
                            string="Close" 
                            icon="gtk-cancel"/>
                    </header>
                    <sheet>
                        <group width="350">
                            <field name="cnt_src" invisible="1"/>
                            <group colspan="4" attrs="{'invisible':[('cnt_src','=',False)]}">
                                <field 
                                    name="nod_target"
                                     attrs="{'required':[('cnt_src','!=',False)]}"/>
                            </group>
                            <group attrs="{'invisible':[('cnt_src','!=',False),('source','!=',False)]}">
                                <field 
                                    name="cnt_name" 
                                    attrs="{'required':[('source','=',False)],'invisible':[('source','!=',False)]}"/>
                                <field 
                                    name="part_name" 
                                    attrs="{'required':[('source','=',False)],'invisible':[('source','!=',False)]}"/>
                                <field 
                                    name="source"
                                     attrs="{'required':[('source','!=',False)],'invisible':[('source','=',False)]}"
                                    on_change="on_change_source(source)"/>
                                <field 
                                    name="meta" 
                                    readonly="1"
                                    attrs="{'invisible':[('source','=',False)]}"/>
                                <field 
                                    name="target" 
                                    attrs="{'required':[('source','!=',False),('cnt_src','=',False)],'invisible':[('source','=',False)]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
			</field>
		</record>

        <record model="ir.actions.act_window" id="eagle_wiz_move_node_to_action">
            <field name="name">Move node to</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">eagle_edoctree.wiz_move_to</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="eagle_wiz_move_node_to_view"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>

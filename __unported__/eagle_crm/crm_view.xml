<openerp>
	<data>

        <!--
			Eagle CRM objects from the partners
    	-->
		<record model="ir.ui.view" id="eagle_crm_partner_search">
			<field name="name">Eagle CRM Partner filter</field>
			<field name="model">eagle.crm</field>
			<field name="priority" eval="30"/>
			<field name="arch" type="xml">
                <search string=" ">
                    <field name="partner_id"/>
                    <field name="contract_id"/>
                </search>
			</field>
		</record>
		<record model="ir.ui.view" id="eagle_crm_partner_list">
			<field name="name">Eagle CRM Partner list</field>
			<field name="model">eagle.crm</field>
			<field name="priority" eval="30"/>
			<field name="arch" type="xml">
                <tree string=" ">
                    <field name="contract_id"/>
                    <field name="partner_id" invisible="1"/>
                </tree>
			</field>
		</record>
		<record model="ir.ui.view" id="eagle_crm_partner_view">
			<field name="name">Eagle CRM Partner view</field>
			<field name="model">eagle.crm</field>
			<field name="priority" eval="30"/>
			<field name="arch" type="xml">
                <form string=" " version="7.0">
                    <group>
                        <field name="partner_id" invisible="1"/>
                        <field name="contract_id"/>
                    </group>
                    <notebook>
                        <page string="Meetings">
                            <field name="meeting_ids"/>
                        </page>
                        <page string="Phone calls">
                            <field name="phonecall_ids"/>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
			</field>
		</record>

        <record model="ir.actions.act_window" id="eagle_action_eagle_crm_part">
            <field name="name">Contracts</field>
            <field name="res_model">eagle.crm</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="eagle_crm_partner_list"/>
            <field name="search_view_id" ref="eagle_crm_partner_search"/>
        </record>

        <record model="ir.actions.act_window.view" id="eagle_action_eagle_crm_part_tree">
            <field name="act_window_id" ref="eagle_action_eagle_crm_part"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="eagle_crm_partner_list"/>
        </record>
        <record model="ir.actions.act_window.view" id="eagle_action_eagle_crm_part_form">
            <field name="act_window_id" ref="eagle_action_eagle_crm_part"/>
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="eagle_crm_partner_view"/>
        </record>

		<record model="ir.ui.view" id="eagle_crm_partner_crm_list">
			<field name="name">Eagle CRM Partner CRM List</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="20"/>
			<field name="arch" type="xml">
                <page string="History" position="after">
                    <page string="CRM list" name="page_crm">
						<field name="partner_crm_ids" context="{'form_view_ref':'eagle_crm.eagle_crm_partner_view', 'tree_view_ref':'eagle_crm.eagle_crm_partner_list'}"/>
                    </page>
                </page>
			</field>
		</record>

        <!--
			Eagle CRM objects from the contracts
    	-->
		<record model="ir.ui.view" id="eagle_crm_contract_search">
			<field name="name">Eagle CRM Contract filter</field>
			<field name="model">eagle.crm</field>
			<field name="priority" eval="30"/>
			<field name="arch" type="xml">
                <search string=" ">
                    <field name="partner_id"/>
                </search>
			</field>
		</record>
		<record model="ir.ui.view" id="eagle_crm_contract_list">
			<field name="name">Eagle CRM Contract list</field>
			<field name="model">eagle.crm</field>
			<field name="priority" eval="31"/>
			<field name="arch" type="xml">
                <tree string=" ">
                    <field name="contract_id" invisible="1"/>
                    <field name="partner_id"/>
                </tree>
			</field>
		</record>
		<record model="ir.ui.view" id="eagle_crm_contract_view">
			<field name="name">Eagle CRM Contract view</field>
			<field name="model">eagle.crm</field>
			<field name="priority" eval="31"/>
			<field name="arch" type="xml">
                <form string=" " version="7.0">
                    <group>
                        <field name="partner_id" domain="[('eagle_contracts', 'in', context.get('contract_id', False))]"/>
                    </group>
                    <notebook>
                        <page string="Meetings">
                            <field name="meeting_ids"/>
                        </page>
                        <page string="Phone calls">
                            <field name="phonecall_ids"/>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
			</field>
		</record>
        
        <record model="ir.actions.act_window" id="eagle_action_eagle_crm_cnt">
            <field name="name">Partners</field>
            <field name="res_model">eagle.crm</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="eagle_crm_contract_list"/>
            <field name="search_view_id" ref="eagle_crm_contract_search"/>
        </record>

        <record model="ir.actions.act_window.view" id="eagle_action_eagle_crm_cnt_tree">
            <field name="act_window_id" ref="eagle_action_eagle_crm_cnt"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="eagle_crm_contract_list"/>
        </record>
        <record model="ir.actions.act_window.view" id="eagle_action_eagle_crm_cnt_form">
            <field name="act_window_id" ref="eagle_action_eagle_crm_cnt"/>
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="eagle_crm_contract_view"/>
        </record>

		<act_window 
			domain="[('res_id','=',active_id),('model','=','eagle.crm')]" 
			id="eagle_action_cnt_crm_2_list_edit_msgs"
			name="List &amp; edit messages" 
			res_model="mail.message" 
			src_model="eagle.crm"
            context="{'default_model':'eagle.crm','default_res_id':active_id}"/>

        <!--
			Inherited contract partners list from the Eagle Base module
    	-->
		<record model="ir.ui.view" id="eagle_crm_cnt_partners_list">
			<field name="name">Eagle CRM Contract Partners List</field>
			<field name="model">eagle.contract</field>
			<field name="inherit_id" ref="eagle_base.eagle_view_contract_form"/>
            <field name="priority" eval="20"/>
			<field name="arch" type="xml">
                <div name="base_buttons" position="inside">
                    <button type="object"
                        states="draft,installation,production"
                        class="oe_right"
                        string="CRM"
                        name="do_open_crm_list"
                        context="{'default_contract_id': active_id}"/>
                </div>
			</field>
		</record>

        <!--
			Inherited Stage of case forms
    	-->
		<record model="ir.ui.view" id="eagle_crm_case_stage_list">
			<field name="name">Eagle CRM Case Stage List</field>
			<field name="model">crm.case.stage</field>
			<field name="inherit_id" ref="crm.crm_case_stage_tree"/>
            <field name="priority" eval="17"/>
			<field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="eagle_state"/>
                </field>
			</field>
		</record>

		<record model="ir.ui.view" id="eagle_crm_case_stage_form">
			<field name="name">Eagle CRM Case Stage Form</field>
			<field name="model">crm.case.stage</field>
			<field name="inherit_id" ref="crm.crm_case_stage_form"/>
            <field name="priority" eval="17"/>
			<field name="arch" type="xml">
                <field name="on_change" position="after">
                    <field name="eagle_state"/>
                </field>
			</field>
		</record>

        <menuitem 
            id="eagle_menu_crm_case_stages"
            name="Stages"
            action="crm.crm_lead_stage_act"
            parent="eagle_base.eagle_menu_eagle_config" 
            sequence="3" />

	</data>
</openerp>

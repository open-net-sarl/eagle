<openerp>
    <data>

        <record model="ir.ui.view" id="eagle_view_meta_config_settings">
            <field name="name">Eagle Settings</field>
            <field name="model">eagle.config.settings</field>
            <field name="inherit_id" ref="eagle_base.eagle_view_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group/div[@name='instances']" position="after">
                    <label for="id" string="Reminders management"/>
                    <div name="reminders">
                        <div>
                            <field name="weekly_reminder_flag" class="oe_inline"/>
                            <label for="weekly_reminder_flag"/>
                        </div>
                        <div>
                            <field name="auto_reminder_flag" class="oe_inline"/>
                            <label for="auto_reminder_flag"/>
                        </div>
                        <div>
                            <field name="auto_reminder_delay" class="oe_inline" attrs="{'readonly':[('auto_reminder_flag','=',False)]}"/>
                            <label for="auto_reminder_delay"/>
                        </div>
                        <div>
                            <button 
                                name="open_schedulers_list" 
                                type="object"
                                string="Configure the scheduler" 
                                icon="gtk-go-forward"
                                class="oe_inline oe_link"/>
                        </div>
                        <div>
                            <button 
                                name="update_auto_reminders" 
                                type="object"
                                string="Update the reminders" 
                                icon="gtk-execute"
                                class="oe_inline oe_link"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Views: Meta -->
        <record model="ir.actions.act_window" id="eagle_base.eagle_action_views_meta">
            <field name="name">The positions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ir.ui.view</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="base.view_view_tree"/>
            <field name="domain">[('model','=','eagle.contract.meta')]</field>
        </record>

        <menuitem 
            name="The Metas"
            action="eagle_base.eagle_action_views_meta" 
            id="eagle_base.eagle_menu_views_meta" 
            parent="eagle_base.eagle_menu_eagle_views"
            sequence="3" 
            groups="eagle_base.group_contracts_viewers,eagle_base.group_contracts_editors,eagle_base.group_contracts_managers"/>

    </data>
</openerp>

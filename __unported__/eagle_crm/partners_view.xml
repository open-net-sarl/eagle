<openerp>
	<data>

		<record model="ir.ui.view" id="eagle_crm_contract_partners_roles_inh">
			<field name="name">Eagle CRM Contract Partners Roles view</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="eagle_base.eagle_contract_partners_roles_inh"/>
            <field name="priority" eval="18"/>
			<field name="type">form</field>
			<field name="arch" type="xml">
                <xpath expr="//page[@string='Contracts list']/field[@name='eagle_contract_list']/kanban" position="inside">
                    <field name="planned_revenue" sum="Expected Revenues"/>
                    <field name="eagle_crm_ids"/>
                    <field name="crm_partners"/>
                    <field name="cnt_partners"/>
                    <field name="probability"/>
                    <field name="crm_currency_id"/>
                </xpath>
                <xpath expr="//page[@string='Contracts list']/field[@name='eagle_contract_list']/kanban/templates/t[@t-name='kanban-box']/div[1]/div[1]/div[1]" position="inside">
                    <t t-if="record.planned_revenue.raw_value">
                        <br/>-&gt; <b><t t-esc="record.planned_revenue.value"/>
                        <field name="crm_currency_id"/></b>
                        @ <t t-esc="record.probability.value"/>%%
                    </t>
                </xpath>
			</field>
		</record>

    </data>
</openerp>

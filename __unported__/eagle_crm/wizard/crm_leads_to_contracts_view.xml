<openerp>
    <data>

        <!-- 
            Wizard: crm lead to contract
        -->
        <record model="ir.ui.view" id="eagle_wiz_crm_lead_2_cnt">
            <field name="name">Eagle wizard: crm leads to contract conversion</field>
            <field name="model">eagle.wiz_crm_leads_to_contracts</field>
            <field name="arch" type="xml">
                <form string="Convert to contract"  version="7.0">
                    <footer>
                        <button name="do_it" string="_Convert" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="eagle_actw_crm_lead_2_cnt"
            multi="True"
            key2="client_action_multi"
            name="Convert to contract"
            res_model="eagle.wiz_crm_leads_to_contracts"
            src_model="crm.lead"
            view_mode="form"
            target="new"
            view_type="form"/>

        <record model="ir.actions.act_window" id="eagle_actm_crm_lead_2_cnt">
            <field name="name">Convert to contract</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">eagle.wiz_crm_leads_to_contracts</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.ui.view" id="eagle_crm_lead_view_for_cnv">
            <field name="name">Eagle CRM Leads Form for the conversion wizard</field>
            <field name="type">form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="priority">17</field>
            <field name="arch" type="xml">
                <field name="stage_id" position="before">
                    <button
                        name="%(eagle_crm.eagle_actw_crm_lead_2_cnt)d" 
                        string="Convert to contract" 
                        type="action"
                        class="oe_highlight"
                        attrs="{'invisible':[('contract_id','!=',False)]}"/>
                </field>
                <field name="categ_ids" position="after">
                    <field name="contract_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="eagle_crm_opport_view_for_cnv">
            <field name="name">Eagle CRM Opportunities Form for the conversion wizard</field>
            <field name="type">form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="priority">21</field>
            <field name="arch" type="xml">
                <field name="stage_id" position="before">
                    <button
                        name="%(eagle_crm.eagle_actw_crm_lead_2_cnt)d" 
                        string="Convert to contract" 
                        type="action"
                        class="oe_highlight"
                        attrs="{'invisible':[('contract_id','!=',False)]}"/>
                </field>
                <field name="categ_ids" position="after">
                    <field name="contract_id"/>
                </field>
            </field>
        </record>

    </data>
</openerp>

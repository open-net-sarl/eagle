<openerp>
	<data>

		<!--
				Opportunies
		-->
		<record model="ir.ui.view" id="eagle_crm_opportunities_view">
			<field name="name">Eagle CRM Opportunites view</field>
			<field name="type">form</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
			<field name="arch" type="xml">
                <field name="phone" position="after">
                    <field name="crm_currency_id"/>
                </field>
                <field name="planned_revenue" position="attributes">
                    <attribute name="options">{'currency_field': 'crm_currency_id'}</attribute>
                </field>
			</field>
		</record>
		<record model="ir.ui.view" id="eagle_crm_opportunities_list">
			<field name="name">Eagle CRM Opportunites list</field>
			<field name="type">form</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
			<field name="arch" type="xml">
                <field name="planned_revenue" position="after">
                    <field name="crm_currency_id"/>
                </field>
			</field>
		</record>

	</data>
</openerp>

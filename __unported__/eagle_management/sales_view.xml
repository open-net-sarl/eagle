<openerp>
	<data>

		<record model="ir.ui.view" id="eagle_view_sale_form_inherit">
			<field name="name">Eagle Sale view</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<field name="origin" position="after">
					<field name="contract_id" select="1" groups="eagle_base.group_contracts_managers,eagle_base.group_contracts_editors,eagle_base.group_contracts_users,eagle_base.group_contracts_viewers"/>
				</field>
				<field name="partner_shipping_id" position="after">
					<field name="sale_partner_id" select="1" groups="eagle_base.group_contracts_managers,eagle_base.group_contracts_editors,eagle_base.group_contracts_users,eagle_base.group_contracts_viewers"/>
				</field>
			</field>
		</record>

		<act_window 
			domain="[('contract_id', '=', active_id),('state','=','draft')]" 
			id="act_contract_2_curr_sale_order"
			name="Current Sale Order" 
			res_model="sale.order" 
			src_model="eagle.contract"/>

		<act_window 
			domain="[('contract_id', '=', active_id),('state','&lt;&gt;','draft')]" 
			id="act_contract_2_oth_sale_orders"
			name="Past Sale Order" 
			res_model="sale.order" 
			src_model="eagle.contract"/>

		<record model="ir.ui.view" id="eagle_view_sale_shop_form_inherit_lnk_cnt">
			<field name="name">Eagle Sale Shop view Linked Contracts</field>
			<field name="model">sale.shop</field>
			<field name="inherit_id" ref="sale.view_shop_form"/>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<field name="project_id" position="after">
					<group colspan="4" col="4" groups="eagle_base.group_contracts_managers,eagle_base.group_contracts_editors,eagle_base.group_contracts_users,eagle_base.group_contracts_viewers">
						<separator string="Linked contracts" colspan="4"/>
						<newline/>
						<field name="eagle_contracts" colspan="4" nolabel="1" height="300"/>
					</group>
				</field>
			</field>
		</record>

		<record model="ir.ui.view" id="eagle_view_sale_shop_form_inherit_cmp">
			<field name="name">Eagle Sale Shop view Companies</field>
			<field name="model">sale.shop</field>
			<field name="inherit_id" ref="sale.view_shop_form"/>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<field name="company_id" position="replace">
					<field name="eagle_contracts_nb" invisible="1"/>
					<field name="company_id" widget='selection' groups="base.group_multi_company" attrs="{'readonly':[('eagle_contracts_nb','&gt;',0)]}"/>
				</field>
			</field>
		</record>

	</data>
</openerp>

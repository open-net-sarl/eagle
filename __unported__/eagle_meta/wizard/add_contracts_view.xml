<openerp>
    <data>
    
        <!--
            Wizard: copy template to contract
        -->
		<record model="ir.ui.view" id="wiz_add_cnt_2_meta_view">
			<field name="name">Eagle wizard: add contracts 2 meta</field>
			<field name="model">eagle.wiz_add_cnt_2_meta</field>
			<field name="arch" type="xml">
                <form string="Add contracts to the meta-contract" version="7.0">
                    <header>
    					<button name="do_it" string="Save" type="object" class="oe_highlight"/>
    					<button special="cancel" string="Close"/>
                    </header>
                    <sheet string="Add contracts to the meta-contract">
                        <group>
                            <field name="meta_id" readonly="1"/>
                        </group>
                        <field name="wiz_line_ids" mode="tree">
                            <tree string=" " editable="top">
                                <field name="contract_id" domain="[('meta_id','=',False)]"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
			</field>
		</record>

        <record model="ir.actions.act_window" id="wiz_add_cnt_2_meta_action">
            <field name="name">Add contracts to the meta-contract</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">eagle.wiz_add_cnt_2_meta</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wiz_add_cnt_2_meta_view"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>

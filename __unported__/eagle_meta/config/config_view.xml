<openerp>
    <data>

        <record model="ir.ui.view" id="eagle_view_meta_config_settings">
            <field name="name">Eagle Settings</field>
            <field name="model">eagle.config.settings</field>
            <field name="inherit_id" ref="eagle_base.eagle_view_config_settings"/>
            <field name="arch" type="xml">
                <div name="interface" position="after">
                    <label for="id" string="Meta-contracts"/>
                    <div name="meta">
                        <div>
                            <field name="meta_mandatory" class="oe_inline"/>
                            <label for="meta_mandatory"/>
                        </div>
                        <div>
                            <field name="use_meta_seq" class="oe_inline"/>
                            <label for="use_meta_seq"/>
                        </div>
                    </div>
                </div>
                <xpath expr="//form/group/div[@name='instances']/div[2]" position="after">
                    <div>
                        <field name="use_meta_4_name" class="oe_inline"/>
                        <label for="use_meta_4_name"/>
                        <field name="use_meta_4_name_digits" class="oe_inline"/>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Views: Meta -->
        <record model="ir.actions.act_window" id="eagle_base.eagle_action_views_meta">
            <field name="name">The positions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ir.ui.view</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="base.view_view_tree"/>
            <field name="domain">[('model','=','eagle.contract.meta')]</field>
        </record>

        <menuitem 
            name="The Metas"
            action="eagle_base.eagle_action_views_meta" 
            id="eagle_base.eagle_menu_views_meta" 
            parent="eagle_base.eagle_menu_eagle_views"
            sequence="3" 
            groups="eagle_base.group_contracts_viewers,eagle_base.group_contracts_editors,eagle_base.group_contracts_managers"/>

    </data>
</openerp>
